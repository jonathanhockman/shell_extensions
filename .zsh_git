alias gst="git status"
alias glist="git branch"
alias gprune="git remote prune origin"
alias gprunelocal="npx git-removed-branches"
alias gcm="git commit -m"
alias gbn="git checkout -b"
alias gbd="git branch -D"
alias gch="git checkout"
alias gpu="git pull origin"
alias gps="git push origin"
alias gmm="git merge master"
alias gmaster="git checkout master"
alias gempty="git commit --allow-empty -m 'Trigger Build'"
alias gupdatemain="git submodule foreach --recursive git checkout . && git submodule update --init --recursive && git submodule foreach --recursive git fetch && git submodule foreach git merge origin master"

function ghelp() {
    echo ""
    echo "Git Shortcuts"
    echo "gst               Show Status"
    echo "glist             List Branches"
    echo "gprune            Prune Deleted Remote Branches"
    echo "gcm <message>     Commit with Message"
    echo "gbn <branch>      Create and Checkout Branch"
    echo "gbd <branch>      Delete Branch"
    echo "gch <branch>      Checkout Branch"
    echo "gpu <branch>      Pull Branch"
    echo "gps <branch>      Push Branch"
    echo "gmm               Merge Master"
    echo "gmaster           Checkout Master"
    echo "gempty            Create Empty Commit with 'Trigger Build' Commit Message"
    echo "gupdatemain       Recursively Pull and Update Sub Repos' Master Branch"
    echo ""
}